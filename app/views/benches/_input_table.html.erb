<% @benchmark.games.each do |game| %>
<h3><%= game.name %></h3>
<% if game.inputs.any? %>
  <table class="table table-bordered">
    <thead>
      <th>Color</th>
      <th>Type</th>
      <th>Min</th>
      <th>Max</th>
      <th>Avg</th>
      <th>Total</th>
      <th>Tools</th>
    </thead>
    <tbody>
      <% bench_types = @benchmark.types %>
      <% game.types.each do |type| %>
        <% if @benchmark.types.include? (type) %>
          <% inputs = type.inputs.where(bench_id: @benchmark.id) %>
          <tr>
            <td style="background-color: <%= type.inputs.where(bench_id: @benchmark.id).first.color %>;"></td>
            <td><%= type.name %></td>
            <td><%= inputs.minimum(:fps).to_i %></td>
            <td><%= inputs.maximum(:fps).to_i %></td>
            <td><%= inputs.average(:fps).to_i %></td>
            <td><%= inputs.count %></td>
            <td><%= link_to 'Destroy All', delete_inputs_bench_path(@benchmark, :type => type.id, :benches_game_id => BenchesGame.where(bench_id: @benchmark.id, game_id: game.id).last.id), class: 'btn btn-danger', remote: true %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <% end %>
<% end %>
