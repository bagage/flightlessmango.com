<% if @benchmark.games.count > 1 %>
<nav>
  <div class="nav nav-pills nav-justified" id="nav-tab" role="tablist">
    <% @benchmark.games.order(name: :asc).each_with_index do |game, i| %>
        <a class="nav-item nav-link <% if i == 0 %> active <% end %>" id="nav-game-tab-<%= game.id %>" data-toggle="tab" href="#nav-game-<%= game.id %>" role="tab" aria-controls="nav-home" aria-selected="true"><%= game.name %></a>
    <% end %>
    <a class="nav-item nav-link" id="nav-game-tab-total" data-toggle="tab" href="#nav-game-total" role="tab" aria-controls="nav-home" aria-selected="true">Total</a>
  </div>
</nav>
<div class="tab-content" id="pills-tabContent">
  <% @benchmark.games.order(name: :asc).each_with_index do |game, i| %>
      <div class="tab-pane fade show <% if i == 0 %> active <% end %>" id="nav-game-<%= game.id %>" role="tabpanel" aria-labelledby="nav-game-tab-<%= game.id %>">
        <h3 class="text-center"><%= game.name %></h3>
      </div>
  <% end %>
  <div class="tab-pane fade show" id="nav-game-total" role="tabpanel" aria-labelledby="nav-game-tab-total">
    <h3 class="text-center">Total</h3>
  </div>
</div>
<% end %>
    
    <!-- <div id="spider"></div> -->
    <%= line_chart fps_benches_game_path(BenchesGame.where(game_id: @benchmark.games.order(name: :asc).first.id, bench_id: @benchmark.id).last.id),
       points: false, curve: false, download: true, title: 'FPS', id: 'fps', xtitle: "Time", ytitle: "FPS",
       library: {yAxis: {min: @benchmark.inputs.minimum(:fps)},subtitle: {useHTML: true, text: '<i class="fas fa-arrow-up" style="color: #00bc8c"></i> More is better'}}, height: '400px' %>
    <%= line_chart full_frametime_benches_game_path(BenchesGame.where(game_id: @benchmark.games.order(name: :asc).first.id, bench_id: @benchmark.id).last.id),
       points: false, curve: false, download: true, title: 'Frame Time', id: 'frametime', xtitle: "Time", ytitle: "Ms",
        library: {yAxis: {min: @benchmark.inputs.minimum(:frametime)},subtitle: {useHTML: true, text: '<i class="fas fa-arrow-down" style="color: #00bc8c"></i> Less is better'}}, height: '400px'  %>
    <br>
    <%= bar_chart bar_benches_game_path(BenchesGame.where(game_id: @benchmark.games.order(name: :asc).first.id,
     bench_id: @benchmark.id).last.id), colors: ["#e64b3b", "#ebc71d", "#6639b6", "#3398dc"], title: 'Average', id: 'bar', ytitle: "FPS",
     library: {subtitle: {useHTML: true, text: '<i class="fas fa-arrow-right" style="color: #00bc8c"></i> More is better'}}, height: '500px', stacked: false %>
    <%#= line_chart benches_game_gpu_path(BenchesGame.where(game_id: @benchmark.games.order(name: :asc).first.id, bench_id: @benchmark.id).last.id),
      points: false, curve: false, download: true, title: 'GPU Usage', id: 'gpu', xtitle: "Time", ytitle: "FPS",
      library: {yAxis: {min: @benchmark.inputs.minimum(:gpu)},subtitle: {useHTML: true, text: '<i class="fas fa-arrow-up" style="color: #00bc8c"></i> More is better'}}, height: '400px' %>
    <%#= line_chart benches_game_cpu_path(BenchesGame.where(game_id: @benchmark.games.order(name: :asc).first.id, bench_id: @benchmark.id).last.id),
      points: false, curve: false, download: true, title: 'CPU Usage', id: 'cpu', xtitle: "Time", ytitle: "FPS",
      library: {yAxis: {min: @benchmark.inputs.minimum(:cpu)},subtitle: {useHTML: true, text: '<i class="fas fa-arrow-up" style="color: #00bc8c"></i> More is better'}}, height: '400px' %>
    <%= render partial: 'stats', locals: {types: BenchesGame.where(bench_id: @benchmark.id).first.types, benches_game_id: BenchesGame.where(bench_id: @benchmark.id, game_id: @benchmark.games.order(name: :asc).first.id).first.id} %>
    <%#= render 'spidergraph' %>
    
<script type="text/javascript">
  $('#spider').hide()
  function sleep(ms) {
    return new Promise(resolve => setTimeout(resolve, ms));
  }
  async function animateGraph(){
    await sleep(5000)
    for (var i = Highcharts.charts[0].series.length - 1; i >= 0; i--) {
      Highcharts.charts[0].series[i].show()
      await sleep(2500)
    }
  }
  
  $(document).on('shown.bs.tab', 'a[data-toggle="tab"]', function (e) {
    if(this.id == "nav-game-tab-total"){
      charts = ['fps', 'frametime', 'bar']
      $.each(charts, function (i, value){
        if(value == 'bar'){
          chart = Chartkick.charts[value]
          chart.updateData('/benchmarks/<%= @benchmark.id %>/' + 'totalbar')
        }
      })
      $('#fps').hide()
      $('#frametime').hide()
      $('#spider').show()
      $('#stats-table').html('<%= j render partial: 'benches/stats_total', locals: {types: BenchesGame.where(bench_id: @benchmark.id).first.types, benches_game_id: BenchesGame.where(bench_id: @benchmark.id).first.id} %>')
    }
    <% @benchmark.games.order(name: :asc).each_with_index do |game, i| %>
        if(this.id == "nav-game-tab-<%= game.id %>"){
          $('#spider').hide()
          $('#fps').show()
          $('#frametime').show()
          $('#bar').show()
          $('#stats-table').html('<%= j render partial: 'benches/stats', locals: {types: BenchesGame.where(bench_id: @benchmark.id, game_id: game.id).first.types, benches_game_id: BenchesGame.where(bench_id: @benchmark.id, game_id: game.id).first.id} %>')
          charts = ['fps', 'frametime', 'bar']
          $.each(charts, function (i, value){
            chart = Chartkick.charts[value]
            <% if game.inputs.count > 5000 %>
              chart.updateData('/benches_games/<%= BenchesGame.where(game_id: game.id, bench_id: @benchmark.id).last.id  %>/' + value)
            <% else %>
              if(value == 'bar'){
                chart.updateData('/benches_games/<%= BenchesGame.where(game_id: game.id, bench_id: @benchmark.id).last.id  %>/' + value)
              } else {
                chart.updateData('/benches_games/<%= BenchesGame.where(game_id: game.id, bench_id: @benchmark.id).last.id  %>/' + 'full_' + value)
              }
            <% end %>
          })
        }
      <% end %>
  })
</script>